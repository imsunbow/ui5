<mvc:View controllerName="uiux.test2.uiuxtest2.controller.LeftView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="LeftPage" title="{i18n>title}">

        <HBox>
            <Button text= "메인으로 이동" press= ".goMain"/>
            <Button text="Home Count" press=".goRight"/>
        </HBox>

        <t:Table
                id = "baseBallTeam"
                rows="{left>/Teamset}"
				selectionMode="MultiToggle"
                selectionBehavior="RowOnly"
				paste="onPaste"
                visibleRowCount="6"
				ariaLabelledBy="title">
				<t:columns>

                    <!-- team COLUMN -->
					<t:Column width="12rem">
                        <Label text="Team" />
						<t:template>
							<Text text="{left>team}" wrapping="false" />
						</t:template>
                    </t:Column>

                    <!-- Year COLUMN -->
					<t:Column width="12rem">
						<Label text="Year" />
						<t:template>
							<Text text="{left>Year}" wrapping="false" />
						</t:template>
                    </t:Column>

                    <!-- Area COLUMN -->
					<t:Column width="12rem">
						<Label text="Area" />
						<t:template>
							<Text text="{left>Area}" wrapping="false" />
						</t:template>
                    </t:Column>

                    <!-- win COLUMN -->
					<t:Column width="12rem">
						<Label text="win" />
						<t:template>
                            <Text text="{left>Win}" wrapping="false" />
						</t:template>
                    </t:Column>

                </t:columns>
            </t:Table>    
    </Page>
</mvc:View>

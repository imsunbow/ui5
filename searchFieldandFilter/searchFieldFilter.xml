<mvc:View controllerName="code1.cl5.searchfield01.code1cl5searchfield01.controller.SearchView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>    
            <SearchField id = "carrid" width="10em" search=".onSearch" placeholder="검색" />
	          <SearchField id = "currency" width="10em" search=".onSearch" placeholder="통화키 검색" />
            
            <!-- table settings -->
            <t:Table
                id = "airLineList"
                rows="{val>/gt_data}"
                selectionMode="Single"
                selectionBehavior="RowOnly"
                paste="onPaste"
                ariaLabelledBy="title"
                >
            <t:columns>
              <!-- carrid column -->
              <t:Column width="11rem">
                  <Label text="Airline" />
                  <t:template>
                      <Text text="{val>Carrid}" wrapping="false" />
                  </t:template>
              </t:Column>

              <!-- airline name column -->
              <t:Column width="11rem">
                  <Label text="Airline Name" />
                  <t:template>
                      <Text text="{val>Name}" wrapping="false" />
                  </t:template>
              </t:Column>

              <!-- Curr column -->
              <t:Column width="11rem">
                  <Label text="Currency" />
                  <t:template>
                      <Text text="{val>Currency}" wrapping="false" />
                  </t:template>
              </t:Column>

          </t:columns>
        </t:Table>                           
    </VBox>
</Page>
</mvc:View>

<mvc:View controllerName="code1.cl5.calculator.code1cl5calculator.controller.CalView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <Input id= "numInput" width="30em"/>
            <HBox>
                <Button text="1" width="2em" press="onSet('1')"/>
                <Button text="2" width="2em" press="onSet('2')"/>
                <Button text="3" width="2em" press="onSet('3')"/>
                <Button text="+" width="2em" press="onSet('+')"/>
            </HBox>
            <HBox>
                <Button text="4" width="2em" press="onSet('4')"/>
                <Button text="5" width="2em" press="onSet('5')"/>
                <Button text="6" width="2em" press="onSet('6')"/>
                <Button text="-" width="2em" press="onSet('-')"/>
            </HBox>
            <HBox>
                <Button text="7" width="2em" press="onSet('7')"/>
                <Button text="8" width="2em" press="onSet('8')"/>
                <Button text="9" width="2em" press="onSet('9')"/>
                <Button text="*" width="2em" press="onSet('*')"/>
            </HBox>
            <HBox>
                <Button text="0" width="2em" press="onSet('0')"/>
                <Button text="." width="2em" press="onSet('.')"/>
                <Button text="=" width="2em" press="onSet('=')"/>
                <Button text="/" width="2em" press="onSet('/')"/>
            </HBox>
            <Button text="Clear" press=".clearValue" />
        </VBox>

    </Page>
</mvc:View>
